<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookbook2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cook_book_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme2">
        <activity android:name="com.example.cookbook2.FavouriteRecipe.FavouriteRecipeActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.example.cookbook2.MainActivity">
            <meta-data
                android:name="Recipe List"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.example.cookbook2.RecipeActivity"
            android:parentActivityName="com.example.cookbook2.MainActivity"
            android:theme="@style/AppThemeRecipe">

        </activity>
        <activity
            android:name="com.example.cookbook2.MainActivity"
            android:theme="@style/SplashScreenTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>